<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorMainPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="center|left">

        <LinearLayout
            android:id="@+id/return_layout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_arrow_left"
                app:tint="@color/colorToolbarIcon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目"
                android:textColor="@color/colorDefaultFont"
                android:textSize="15sp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="3dp"
            android:layout_height="14dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorToolbarFillet"
            android:layout_marginLeft="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@color/colorDefaultFont"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:textStyle="bold"
            android:id="@+id/title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center|right">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu2"
            android:id="@+id/menu_button"
            app:tint="@color/colorDefaultIcon2"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</RelativeLayout>