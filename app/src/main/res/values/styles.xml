<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- TextInputLayout边框文字颜色 -->
    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorEditorSelectBorder</item>
    </style>
    
    <!-- 按钮与Tab小写样式 -->
    <style name="ButtonTabTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- popwindow动画 -->
    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">        
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>   
        <item name="android:windowExitAnimation">@anim/popup_exit</item>   
    </style>
    
    <!-- 自研代码编辑器补全列表动画 -->
    <style name="PopupCodeCompletionAnimation" parent="android:Animation" mce_bogus="1">        
        <item name="android:windowEnterAnimation">@anim/popup_code_completion_enter</item>   
        <item name="android:windowExitAnimation">@anim/popup_code_completion_exit</item>   
    </style>
    
</resources>
